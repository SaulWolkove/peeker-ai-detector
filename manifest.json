{
  "manifest_version": 3,
  "name": "Peeker Artificial Image and Text Detector",
  "version": "1.0",
  "description": "Detect AI-generated images by dragging and dropping onto the floating icon",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "offscreen",
    "storage"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.bundle.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.bundle.js"],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
  "web_accessible_resources": [
  {
    "resources": ["icons/*", "feedback.html", "feedback.js"],
    "matches": ["<all_urls>"]
  }
]
}
